@columns: 3;
@gap: auto;

#main {
    max-width: 920px;
}

.images {

    margin-top: 2em;

    -moz-columns: #{columns} #{gap};
    -webkit-columns: #{columns} #{gap};
    columns: #{columns} #{gap};

    img {
        display: inline-block;
        box-sizing: border-box;
        margin: .5em 0;
        width: 100%;
        max-height: initial;
        height: auto;

        padding: 15px 15px;
        background-color: white;
        box-shadow: 0 1px 3px rgba(34, 25, 25, 0.4);
    }

}
